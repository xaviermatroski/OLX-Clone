<body class="bg-gradient-primary">
    <div class="auth-container">
        <div class="auth-card">
            <div class="text-center mb-4">
                <img src="/images/iitropar_logo.png" alt="IIT Ropar Logo" height="70" class="mb-3">
                <h1 class="auth-title">Verify OTP</h1>
                <p class="auth-description">Enter the OTP sent to your email</p>
            </div>
            <form action="/verify-reset-otp" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="otp"><i class="fas fa-key"></i> Enter OTP</label>
                    <input type="text" id="otp" name="otp" class="form-control text-center" 
                           placeholder="Enter 6-digit OTP" required maxlength="6">
                    <small class="form-text text-muted">Please check your email for the OTP</small>
                </div>
                <button type="submit" class="btn custom-btn action-btn w-100 mb-4">Verify OTP</button>
                <div class="auth-footer">
                    <p class="text-muted mb-0">
                        Didn't receive OTP? 
                        <a href="/forgot-password" class="auth-link">Resend OTP</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>
